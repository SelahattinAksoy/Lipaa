<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:showDividers="beginning">

    <TextView
        android:id="@+id/currency_id"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_margin="12dp"
        android:background="#6166B656"
        android:gravity="center"
        android:text="TextView"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="150dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/currency_amaout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Alacağınız Miktar"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/currency_price_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Tutarı..."
            android:inputType="textPersonName" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/switch1"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="USD" />

            <Button
                android:id="@+id/conver_button_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:shadowRadius="12"
                android:background="#2196F3"
                android:shadowColor="#CDDC39"
                android:text="Çevir"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/buy_button_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowRadius="12"
                android:background="#2196F3"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:text="Satın Al" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>